        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#004400">

    <TextView
            android:id="@+id/loadStuff"
            android:textColor="#ffffff"
            android:layout_width="match_parent"

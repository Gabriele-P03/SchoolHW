<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#444444">

    <ImageView
            android:layout_marginTop="10dp"
            android:background="@drawable/top_right_bordered_rect"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/menuButton"
            app:layout_constraintRight_toRightOf="@id/menuButton"
    />

    <ImageButton
            android:backgroundTint="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:id="@+id/menuButton"
            android:src="@mipmap/menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/order_button"
            android:backgroundTint="@android:color/transparent"
            android:text="NAME"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/dividerMain"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
    />

    <View
            android:id="@+id/dividerMain"
            style="@style/divider"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/menuButton"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <ListView
            android:id="@+id/list_list_homework"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/dividerMain"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>